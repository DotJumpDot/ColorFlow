{
  "name": "color-flow",
  "displayName": "Color Flow",
  "description": "Visualize CSS colors in HTML documents with configurable background highlighting",
  "version": "1.6.0",
  "publisher": "DotJumpDot",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "color",
    "css",
    "html",
    "highlight",
    "visualize",
    "inline-style",
    "background",
    "preview"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:php",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:astro",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onLanguage:razor",
    "onLanguage:handlebars",
    "onLanguage:ejs",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "colorFlow.openSettings",
        "title": "Color Flow: Open Settings"
      },
      {
        "command": "colorFlow.toggle",
        "title": "Color Flow: Toggle Highlighting"
      },
      {
        "command": "colorFlow.refresh",
        "title": "Color Flow: Refresh Decorations"
      }
    ],
    "configuration": {
      "title": "Color Flow",
      "properties": {
        "colorFlow.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable color highlighting in HTML documents"
        },
        "colorFlow.enableClassHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Enable highlighting for CSS classes defined in style tags"
        },
        "colorFlow.opacity": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 1,
          "description": "Opacity of the background color highlight (0-1)"
        },
        "colorFlow.hideBackgroundHighlight": {
          "type": "boolean",
          "default": false,
          "description": "Hide background highlight and only show border (requires Enable Border to be true)"
        },
        "colorFlow.enableBorder": {
          "type": "boolean",
          "default": false,
          "description": "Enable border around highlighted text"
        },
        "colorFlow.borderColor": {
          "type": "string",
          "default": "currentColor",
          "description": "Border color for highlighted text (e.g., 'currentColor', '#000000', 'red', 'rgba(0,0,0,0.5)')"
        },
        "colorFlow.borderSize": {
          "type": "string",
          "default": "1px",
          "description": "Border width for highlighted text (e.g., '1px', '2px', '3px')"
        },
        "colorFlow.borderRadius": {
          "type": "string",
          "default": "0px",
          "description": "Border radius for highlighted text (e.g., '2px', '4px', '8px')"
        },
        "colorFlow.highlightMode": {
          "type": "string",
          "enum": [
            "full-line",
            "word-only",
            "char-range"
          ],
          "default": "char-range",
          "enumDescriptions": [
            "Highlight entire line containing the element",
            "Highlight from first non-space to last non-space character",
            "Highlight exact element text range"
          ],
          "description": "Determines how much of the text to highlight"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile-tests": "tsc -p ./tsconfig.test.json",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "16.x",
    "@types/tinycolor2": "^1.4.6",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^10.0.1",
    "jest": "^30.2.0",
    "minimatch": "^10.2.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "htmlparser2": "^10.1.0",
    "tinycolor2": "^1.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DotJumpDot/Color-Flow.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DotJumpDot/Color-Flow/issues"
  },
  "homepage": "https://github.com/DotJumpDot/Color-Flow#readme"
}
