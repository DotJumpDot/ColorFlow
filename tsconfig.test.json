{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "test-dist",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest", "vscode"]
  },
  "include": ["test/**/*.ts", "src/**/*.ts"]
}
